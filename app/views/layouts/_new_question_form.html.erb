<% action = (edit ? question_url(question) : questions_url) %>
<% method = (edit ? "put" : "post") %>

<div class="col-sm-8 col-sm-offset-2">
	<form action="<%= action %>" method="post" id="new-question-form">
			<input type="hidden" 
						 name="_method"
						 value="<%= method %>">

			<input type="hidden" 
						 name="authenticity_token"
						 value="<%= form_authenticity_token %>">
			
			<div class="form-group">
				<label for="question_title">Title: </label>
				<input type="text" class="form-control" 
							 id="question_title" name="question[title]"
							 value="<%= question.title %>">
			</div>

			<div class="form-group">
				<label for="question_body">Description: </label>
				<textarea type="text" 
									class="form-control" 
							 		id="question_body"
							 		name="question[body]"><%= question.body %></textarea>
			</div>		

<!-- 			<div class="form-group">
				<label for="question_topic">Topic: </label>
				<input type="text" class="form-control" 
							 id="question_topic" name="question[topic]"
							 value="">
			</div>
 -->			
			<input type="submit" class="modal-send my-hidden"/>
	</form>
</div>