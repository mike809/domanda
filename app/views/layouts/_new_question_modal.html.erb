<div class="modal fade" id="new-question-modal" 
     tabindex="-1" 
     role="dialog"
     aria-labelledby="myModalLabel"
     aria-hidden="true">

  <div class="modal-dialog">
    <div class="modal-content">
      
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">New Question</h4>
      </div>

      <div class="new-question-modal-body">
        <div class="row">
          <%= render 'layouts/new_question_form', 
              :question => @question || Question.new,
              :edit => @edit %>
        </div>
        <div class="errors"></div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">
          Close
        </button>
        <button type="button" class="btn btn-primary modal-send">
          Ask Question
        </button>
      </div>

    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->