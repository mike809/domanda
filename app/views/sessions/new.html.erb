<div class="row">
  <div class="col-xs-4 col-xs-offset-4">

  <h1>Sign In</h1>	
	 
	  <form action="<%= login_url %>" method="post">
	    <input type="hidden" 
	    				name="authenticity_token"
	    	 			value="<%= form_authenticity_token %>">

  		<div class="form-group">
	 		  <label for="user_login">Username or Email:</label>	
		    <input class="form-control" type="text" id="user_login" name="user[login]">
		  </div>
		
		  <div class="form-group">
			  <label for="user_password">Password:</label>	
			  <input class="form-control" type="password" id="user_password" name="user[password]">
		  </div>

	  	<button type="submit" class="btn btn-md btn-info">Sign In</button>
	  </form>
	  
	  <%= link_to "Sign up", signup_url %><br />
  </div>
</div>